<%- include("header") -%>


    <div class="box" id="heading">
        <h1><%=day%></h1>
    </div>
    <div class="box">
        <%for(var i=0; i<items.length; i++){%>
            <div class="item">
                <input type="checkbox">
                <p><%= items[i] %></p>
            </div>
        <%}%>

        <form action="/" method="post" class="item">
            <input type="text" name="addToList" placeholder="New Item" autocomplete="off">
            <button type="submit">+</button>
        </form>
    </div>


<%- include("footer") -%>
